<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxapphw4.Controller">
    <TextArea fx:id="messageHistory" editable="false" VBox.vgrow="ALWAYS"/>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <FlowPane alignment="BASELINE_CENTER">
        <TextField fx:id="messageInput" editable="true" VBox.vgrow="ALWAYS"/>
        <Button text="Отправить" defaultButton="true" onAction="#clickButtonPush"/>
    </FlowPane>
</VBox>
